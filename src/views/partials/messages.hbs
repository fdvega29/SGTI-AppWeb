{{#if success_msg}}
    <div class="col-md-6 mx-auto">
        <div class="alert alert-success mt-2" role="alert">
            {{success_msg}}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
{{/if}}